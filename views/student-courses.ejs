                <small></small>
            </div>

            <div class="side-menu">
                <ul>
                    <li>
                        <a href="/courses" class=" <%=  (page_name === 'student-courses'  ) && 'active' %> ">
                            <span class="las la-id-card-alt"></span>
                            <small>Kurslar</small>
                        </a>
                    </li>
                    <li>
                        <a href="/users/student-dashboard" class=" <%=  (page_name === 'student-dashboard'  ) && 'active' %> ">
                            <span class="las la-user-alt"></span>
                            <small>Alınan Kurslar</small>
                        </a>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="las la-envelope"></span>
                            <small>İLETİŞİM</small>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="las la-clipboard-list"></span>
                            <small></small>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="las la-tasks"></span>
                            <small></small>
                        </a>
                    </li>

                </ul>
            </div>
        </div>
    </div>


    

	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 

                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="<%= course.images %>" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<% if(user && !(user.courses.includes(course._id))) { %>
								<div class="post-date">
									<form method="POST" action="/courses/enroll">
										<input type="hidden" name="course_id" value="<%=course.id%>">
										<button class="btn btn-lg btn-warning text-white" onclick="return confirm('Bu kursu eklemek istediğinizden emin misiniz?')"> <span>Kursu Ekle</span> </button>
                                        <input type="hidden" name="onayladi">
									</from>
									
								</div>
							<div class="meta-info-blog">
								<span><i class="fa fa-calendar"></i> <a href="#">
									<% if (course.createAt) { %>
										<% const basvuruTarihi = new Date(course.createAt); %>
										<a><%= basvuruTarihi.getDate() %>.<%= basvuruTarihi.getMonth() + 1 %>.<%= basvuruTarihi.getFullYear() %> </a>
									  <% } else { %>
										Boş
									  <% } %>
									</a> </span>
							</div>
							<% } %>

							<% if(user && (user.courses.includes(course._id))) { %>
								<div class="post-date">
									
										
										<a href="#"><button class="btn btn-lg btn-warning text-white"> <span>kursu İzlemeye Başla</span> </button></a>
                                        
									
									
								</div>
								
								<div class="meta-info-blog">
									<span><i class="fa fa-calendar"></i> <a href="#">Bu kursu Almişsın</a> </span>
								</div>
							<% } %>

							
							<div class="blog-title">
								<h2><a href="" title=""> <%= course.name  %> </a></h2>
							</div>
							<div class="blog-desc">
						
								<blockquote class="default">
									<%= course.description  %>
								</blockquote>
							</div>							
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
							<h3 class="author_name"><a href="#"> <%= course.user.name %> </a></h3>
						</div>
					</div>
					
                </div><!-- end col -->
