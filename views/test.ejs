                                month: 'long',
                                day: 'numeric',
                                hour: '2-digit',
                                minute: '2-digit'
                            };
                            const formattedDate = createAt.toLocaleDateString('tr-TR', options);
                            %>
                            <%= formattedDate %>
                        </td>
